{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types"],
    "types": ["./src/types"],
    "moduleResolution": "node",
    "target": "esnext",
    "module": "commonjs",
    "baseUrl": "src",
    "outDir": "dist",
    "lib": ["esnext"],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "allowJs": true,
    "strict": true
  },
  "include": ["src"],
  "exclude": ["dist"]
}
